    "@types/ffmpeg-installer__ffmpeg": "^1.0.2",
    "@types/jest": "^29.5.12",
    "@types/node": "~20.9",
    "@types/react": "^18.2",
    "@types/react-dom": "^18.2",
    "@types/testing-library__jest-dom": "^5.14.9",
    "@types/uuid": "^8.3.4",
