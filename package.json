  "private": true,
  "description": "A free, open-source stop motion animation program.",
  "main": "./dist/main.js",
  "author": {
    "name": "Charlie Lee",
    "email": "contact@charlielee.uk",
    "url": "https://www.charlielee.uk"
  },
  "homepage": "https://www.charlielee.uk/boats-animator",
  "license": "GPL-3.0",
  "bugs": {
    "email": "contact@charlielee.uk",
